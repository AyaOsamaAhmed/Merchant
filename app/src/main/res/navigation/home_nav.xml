<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/currentOrderFragment">

    <fragment
        android:id="@+id/currentOrderFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.CurrentOrderFragment"
        android:label="CurrentOrderFragment"
        tools:layout="@layout/fragment_current_order" />
    <fragment
        android:id="@+id/archiveFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.ArchiveFragment"
        android:label="ArchiveFragment"
        tools:layout="@layout/fragment_archive">
        <action
            android:id="@+id/action_archiveFragment_to_currentOrderFragment"
            app:destination="@id/currentOrderFragment"
            app:popUpTo="@id/currentOrderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.ProfileFragment"
        android:label="ArchiveFragment"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_currentOrderFragment"
            app:destination="@id/currentOrderFragment"
            app:popUpTo="@id/currentOrderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.chat.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_chatFragment_to_chatDetailsFragment"
            app:destination="@id/chatDetailsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_chatFragment_to_currentOrderFragment"
            app:destination="@id/currentOrderFragment"
            app:popUpTo="@id/currentOrderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.StatisticsFragment"
        android:label="StatisticsFragment"
        tools:layout="@layout/fragment_statistics">
        <action
            android:id="@+id/action_statisticsFragment_to_currentOrderFragment"
            app:destination="@id/currentOrderFragment"
            app:popUpTo="@id/currentOrderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chatDetailsFragment"
        android:name="com.rbt.merchant.presentation.fragment.home.main.chat.ChatDetailsFragment"
        android:label="ChatDetailsFragment"
        tools:layout="@layout/fragment_chat_details">
        <action
            android:id="@+id/action_chatDetailsFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:popUpTo="@id/chatFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="Chat"
            app:argType="com.rbt.merchant.domain.use_case.ui_models.chat.Chat" />
    </fragment>

</navigation>