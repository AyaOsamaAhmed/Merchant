<resources>
    <!-- Base application theme. -->
    <style name="Theme.Merchant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textViewStyle">@style/CairoTextViewStyle</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="dark_button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/draw_border_medium_purple</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <!--<style name="Widget.App.PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>-->
    <style name="PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:width">@dimen/_150sdp</item>
    </style>

    <style name="CairoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>
    <!--custom switch style -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/purple_500</item>
        <item name="colorSecondary">@color/purple_500</item>
    </style>
    <!--tabs style-->
    <style name="TextAppearance.App.Tab" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/cairo_bold</item>
        <item name="android:fontFamily">@font/cairo_bold</item>
    </style>
    <!--bottom sheet style-->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/draw_border_medium_white</item>
    </style>
</resources>